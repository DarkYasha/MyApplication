<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.edu.tecii.proyecto_final.DrawActivity"
    tools:showIn="@layout/activity_draw">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">


        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_input_add"
            android:id="@+id/aÃ±adir"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_edit"
            android:id="@+id/trazo"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_delete"
            android:id="@+id/borrar"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_save"
            android:id="@+id/guardar"/>

    </LinearLayout>

    <com.tecii.android.paint.Lienzo
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:layout_height="0dp"
        android:id="@+id/lienzo"
        android:background="#ffffffff"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="347dp"
        android:layout_weight="1"
        android:layout_height="0dp">

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:text="New Button"
            android:tag="#ff000000"
            android:background="#ff000000"
            android:id="@+id/negro"
            android:layout_height="@dimen/alturacolor" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="@dimen/alturacolor"
            android:text="New Button"
            android:tag="#ffffffff"
            android:background="#ffffffff"
            android:id="@+id/blanco"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="@dimen/alturacolor"
            android:text="New Button"
            android:tag="#ff0000ff"
            android:background="#ff0000ff"
            android:id="@+id/azul"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="@dimen/alturacolor"
            android:text="New Button"
            android:tag="#ffff0000"
            android:background="#ffff0000"
            android:id="@+id/rojo"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/alturacolor"
            android:text="New Button"
            android:tag="#ff00ff00"
            android:background="#ff00ff00"
            android:id="@+id/verde"/>

    </LinearLayout>
</LinearLayout>
